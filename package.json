{
  "name": "markdown-viewer",
  "version": "0.1.0",
  "description": "A configurable standalone Markdown viewer built with Electrobun",
  "type": "module",
  "scripts": {
    "dev": "electrobun dev",
    "build": "electrobun build",
    "build:mac": "electrobun build --targets macos-arm64",
    "postbuild:mac": "bun scripts/patch-macos-plist.ts",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit"
  },
  "dependencies": {
    "dompurify": "^3.2.4",
    "electrobun": "1.13.1",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-task-lists": "^2.1.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/markdown-it": "^14.1.2",
    "typescript": "^5.9.2"
  }
}
